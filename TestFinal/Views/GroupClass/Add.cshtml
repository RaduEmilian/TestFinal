
@{
    //Layout = null;
}

@model TestFinal.ViewModels.CreateGroupClassViewModel

<!DOCTYPE html>

<html>

<body>
    <style>
        /*----------ADD Classes----------*/

        .add-subscriptions img {
            background-position: cover;
        }

        .add-subscriptions-form {
            /*width: fit-content;*/
            box-shadow: 0 0 3px 0 rgba(0,0,0,0.3);
            background: #fff;
            padding: 20px;
            margin: 8% auto 0;
            text-align: center;
        }

            .add-subscriptions-form h1 {
                color: #ff3c00;
                margin-bottom: 30px;
            }

        #add-subscriptions button {
            color: #fff;
            width: 100%;
            padding: 10px;
            border-radius: 20px;
            font-size: 15px;
            margin: 10px 0;
            border: none;
            outline: none;
            cursor: pointer;
        }

        .add-btn {
            background-color: #000000;
        }

        a {
            text-decoration: none;
        }

        .add-subscriptions-form img {
            width: 70px;
            margin-top: -50px;
        }

        body .add-subscriptions-form {
            background-image: url(image/4moving.jpg);
            background-position: center;
        }
    </style>
    <section id="add-subscriptions">
        <div class="add-subscriptions-form">
            <img src="\image\4moving.jpg" />
            <h1>Add New Class</h1>
            <form asp-action="creategroupclass">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class=" form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RoomNumber" class="control-label"></label>
                    <input asp-for="RoomNumber" class="form-control" />
                    <span asp-validation-for="RoomNumber" class="text-danger"></span>
                </div>
                <br />
                <button type="submit" class="add-btn">Add Classes</button>
            </form>
        </div>
        <br />
    </section>
    <br />

</body>
</html>
