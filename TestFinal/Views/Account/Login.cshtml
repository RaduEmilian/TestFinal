@model TestFinal.ViewModels.LoginViewModel


@{
    ViewBag.Title = "User Login";
}

<style>
    .gradient-custom-2 {
        /* fallback for old browsers */
        background: #fccb90;
        /* Chrome 10-25, Safari 5.1-6 */
        background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
        /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
        background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
    }
</style>

<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="~/images/4movinglogo.jpg"
                                         style="width: 100px;" alt="logo">
                                    <h4 class="mt-1 mb-5 pb-1">We are The 4MOVING Team</h4>
                                </div>

                                <form method="post">
                                    <p>Please login to your account</p>

                                    <div class="form-outline mb-4">


                                        <input type="email" asp-for="Email" class="form-control"
                                               placeholder="Phone number or email address" />
                                        <label asp-for="Email">Username</label>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="form-outline mb-4">
                                        <input type="password" asp-for="Password" class="form-control" />
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <button class="btn btn-primary fa-lg gradient-custom-2 mb-3" type="submit">
                                            Log
                                            in
                                        </button>

                                    </div>

                                    <div class="d-flex align-items-center justify-content-center pb-4">
                                        <p class="mb-0 me-2">Don't have an account?</p>
                                        <button type="button" class="btn btn-outline-danger">Create new</button>
                                    </div>

                                </form>

                            </div>
                        </div>
                        <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                            <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                <h4 class="mb-4">We are more than just a gym</h4>
                                <p class="small mb-0">
                                    Our desire, and at the same time our medium- and long-term commitment, is to bring about a change in the lifestyle of the provider who only uses our services, to guide them on how to get what they hope for in the shortest possible time , but adopting a lifestyle that is not allowed to lack movement.


                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

