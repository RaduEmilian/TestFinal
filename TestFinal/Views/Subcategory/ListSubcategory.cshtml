@using Microsoft.AspNetCore.Identity
@model IEnumerable<Subcategory>

@{ ViewData["Title"] = " - Subcategorie"; }


@if (Model.Any())
{
    int i = 1;
<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="" style="margin-top:20px;">

            <br>
            Manage Subcategories
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-black">
                <i class="fas fa-sign-in-alt"></i> List Subcategory
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                </p>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Category Id</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    @foreach (var option in Model)
                    {
    <tbody>
        <tr>
            <th scope="row">@i</th>
            <td>@option.SubCategorieID</td>
            <td>@option.Nume</td>
            <td>@option.Categories.CategoryName</td>
            <td>
                
                <a class="btn btn-primary" asp-action="DeleteSubCategory" asp-controller="subcategory" asp-route-id="@option.SubCategorieID">
                    <i class="fas fa-delete"></i>
                    Delete
                </a>
        </tr>
    </tbody>i++;
                    }
                </table>
            </div>
        </div>
        <div class="card mb-3">
            
            <div class="card-body"> 
                <a class="btn btn-outline-dark" asp-action="CreateSubCategory" asp-controller="subcategory">
                    <i class="fas fa-user-plus"></i>
                    Create a new Subcategory
                </a>
            </div>
        </div>
        <hr>
    </div>
</div> }
            else
            {
<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
          
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                    There are currently no subcategories
                </p>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">SubCategory Id</th>
                            <th scope="col">SubCategory Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <th scope="row">1</th>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card mb-3">
            <div class="card-header bg-custom text-white">
                <i class="far fa-question-circle"></i> Add New Subcategory
            </div>
            <div class="card-body">
               
                <a class="btn btn-outline-dark" asp-action="CreateSubCategory" asp-controller="subcategory">
                    <i class="fas fa-user-plus"></i>
                    Create a new subcategory
                </a>
            </div>
        </div>
        <hr>
    </div>
</div>}