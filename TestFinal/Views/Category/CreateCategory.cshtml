@model TestFinal.ViewModels.CreateCategoryViewModel

@{ ViewData["Title"] = "Create Category"; }

<div class="content container-fluid" style="margin-top:30px;">
    
    <div class="container-fluid text-center container-content">
        <h2 class="" style="margin-top: 20px;">
            Add Category
            <br>
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            <div class="card-header bg-custom text-black">
                <i class="fas fa-sign-in-alt"></i> Category
            </div>
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">

                </p>
                <form class="row gx-3 gy-2 align-items-center" method="post">
                    <div class="col">
                        <label asp-for="Nume">Category Name</label>
                        <input asp-for="Nume" type="text" class="form-control" style="width: auto" placeholder="Option Name" required>
                        <span asp-validation-for="Nume" class="text-danger"></span>

                    </div>
                    <div class="col align-self-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-sign-in-alt"></i>
                            Add
                        </button>
                    </div>
                </form>
            </div>
        </div>

        <hr>
    </div>
</div>




