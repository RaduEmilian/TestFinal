@using Microsoft.AspNetCore.Identity
@model IEnumerable<Category>

@{ ViewData["Title"] = " - Categorie"; }


@if (Model.Any())
{
    int i = 1;
<div class="content container-fluid">
    <div class="container-fluid text-center container-content">
        <h2 class="">

            <br>
            Manage Category
        </h2>
    </div>
    <div class="container-fluid text-center container-content">
        <hr>
        <div class="card mb-3">
            
            <div class="card-body mx-auto">
                <h5 class="card-title"></h5>
                <p class="card-text">
                </p>
                <table class="table table-striped table-dark">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Category Id</th>
                            <th scope="col">Category Name</th>
                            <th scope="col">Action</th>
                        </tr>
                    </thead>
                    @foreach (var option in Model)
                    {
    <tbody>
        <tr>
            <th scope="row">@i</th>
            <td>@option.CategoryId</td>
            <td>@option.CategoryName</td>

            <td>
    
                <a class="btn btn-primary" asp-action="DeleteCategory" asp-controller="category" asp-route-id="@option.CategoryId">
                    <i class="fas fa-delete"></i>
                    Delete
                </a>
        </tr>
    </tbody>i++;
                    }

                </table>
            </div>

        </div>
        <div class="card mb-3">   
            <div class="card-body">
                <h5 class="card-title"></h5>
                
                <a class="btn btn-outline-dark" asp-action="CreateCategory" asp-controller="category">
                    <i class="fas fa-user-plus"></i>
                    Create a new Category
                </a>
            </div>
        </div>
        <hr>
    </div>
</div> }
           