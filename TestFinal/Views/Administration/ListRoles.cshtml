@model IEnumerable<IdentityRole>
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    //Layout = null;
    ViewBag.Title = "List Role";


}
<!DOCTYPE html>
<html>

<body>
    <style>

        body {
            font-family: 'Poppins', sans-serif;
            background: #fafafa;
        }

        p {
            font-family: 'Poppins', sans-serif;
            font-size: 1.1em;
            font-weight: 300;
            line-height: 1.7em;
            color: black;
        }

        a, a:hover, a:focus {
            color: inherit;
            text-decoration: none;
            transition: all 0.3s;
        }
    </style>



    <h3 style="margin-top: 100px;">Add User</h3>
    <div class="container" style="width: 500px; position: fixed; top: 50%; left: 50%; transform: translate(-50%,-50%);">
        @if (Model.Any())
        {
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateRole"
               asp-controller="administration">Add new role</a>
            <a class="btn btn-primary mb-3" style="width:auto" asp-action="ListUsers"
               asp-controller="administration">List Users</a>

            foreach (var role in Model)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        Role Id : @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <form method="post" asp-action="DeleteRole" asp-route-id="@role.Id">
                            <a class="btn btn-primary" asp-action="EditRole" asp-controller="Administration"
                               asp-route-id="@role.Id">Edit</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto"
                       asp-controller="administration" asp-action="CreateRole">
                        Create Role
                    </a>
                </div>
            </div>

        }
    </div>
</body>
</html>